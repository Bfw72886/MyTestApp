<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/formfield"/>
            <corners android:topLeftRadius="8dp" android:topRightRadius="8dp" android:bottomLeftRadius="0dp" android:bottomRightRadius="0dp"/>
        </shape>
    </item>
    <item android:gravity="bottom">
        <shape android:shape="rectangle">
            <size android:height="1dp"/>
            <solid android:color="@color/formfieldfont"/>
        </shape>
    </item>
    <item android:drawable="@drawable/formfieldarrow" android:gravity="end">
        <bitmap android:src="@drawable/formfieldarrow"/>
    </item>
</layer-list>
